<?xml version="1.0" encoding="utf-8" ?>


<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>			

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Apparel_MechaArmor"]/apparel/tags</xpath>
					<value>
					    <li>Spacer</li>
						<li>EVA</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Apparel_MechaArmor"]/statBases/Insulation_Cold</xpath>
					<value>
						<Insulation_Cold>100</Insulation_Cold>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Apparel_MechaHelmet"]/apparel/tags</xpath>
					<value>
					    <li>Spacer</li>
						<li>EVA</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Apparel_MechaHelmet"]/statBases/Insulation_Cold</xpath>
					<value>
						<Insulation_Cold>50</Insulation_Cold>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
