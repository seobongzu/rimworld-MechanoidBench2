<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelMBBase">
    <defName>Apparel_MechaArmor</defName>
    <label>mecha armor</label>
    <description>A Power armor made for maximum protection, especially for heat protection. Improved with mechanoid component, it is much lighter than the existing marine armor.\n\nArmor like this is often used by imperial janissaries and rapid-incursion space marines.</description>
    <apparel>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
    </apparel>
	<statBases>
      <WorkToMake>85000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <Mass>8</Mass>
	  <MarketValue>3600</MarketValue>
      <Flammability>0.0</Flammability>
      <ArmorRating_Sharp>1.2</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Heat>1.5</ArmorRating_Heat>
      <Insulation_Cold>36</Insulation_Cold>
      <Insulation_Heat>18</Insulation_Heat>
      <EquipDelay>11</EquipDelay>
    </statBases>
	
	<costList>
	  <VFE_ComponentMechanoid>10</VFE_ComponentMechanoid>
      <ComponentSpacer>6</ComponentSpacer>
      <Plasteel>150</Plasteel>
      <Uranium>50</Uranium>
    </costList>
	
  </ThingDef>

  <ThingDef Name="ApparelMBBase" ParentName="ArmorMachineableBase" Abstract="True">
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>JGH_MechanoidResearch_Armor</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>JGH_Mechanoid_Bench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/MechaArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <generateCommonality>2</generateCommonality>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
    </equippedStatOffsets>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/MechaArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="ApparelMBHelmetBase">
    <defName>Apparel_MechaHelmet</defName>
    <label>mecha helmet</label>
    <description>A armored high-tech helmet, especially for heat protection. Improved with mechanoid component, it is much lighter than the existing marine helmet.\n\nArmor like this is often used by imperial janissaries and rapid-incursion space marines.</description>
    <apparel>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
    </apparel>
	<statBases>
      <WorkToMake>30000</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Mass>1</Mass>
	  <MarketValue>1000</MarketValue>
      <Flammability>0.0</Flammability>
      <ArmorRating_Sharp>1.2</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Heat>1.5</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
	
    <costList>
	  <VFE_ComponentMechanoid>5</VFE_ComponentMechanoid>
      <ComponentSpacer>1</ComponentSpacer>
      <Plasteel>50</Plasteel>
    </costList>
	
  </ThingDef>

  <ThingDef Name="ApparelMBHelmetBase" ParentName="ArmorHelmetMakeableBase" Abstract="True">
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>JGH_MechanoidResearch_Armor</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>JGH_Mechanoid_Bench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/MechaArmorrHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <generateCommonality>2</generateCommonality>

    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/MechaArmorrHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

</Defs>